# =============================================================================
# KinoWeek Frontend Dockerfile
# Multi-stage build for Astro static site with nginx
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Build the Astro site
# -----------------------------------------------------------------------------
FROM node:22-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files for dependency installation
COPY web/package.json web/package-lock.json ./

# Install dependencies
RUN npm ci --ignore-scripts

# Copy source files
COPY web/ ./

# Build the static site
RUN npm run build

# -----------------------------------------------------------------------------
# Stage 2: Production nginx server
# -----------------------------------------------------------------------------
FROM nginx:1.27-alpine AS runtime

# Remove default nginx config and content
RUN rm -rf /usr/share/nginx/html/* /etc/nginx/conf.d/default.conf

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy built static files from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Security: Run as non-root user
# nginx alpine image supports this via nginx user
RUN chown -R nginx:nginx /usr/share/nginx/html && \
    chown -R nginx:nginx /var/cache/nginx && \
    chown -R nginx:nginx /var/log/nginx && \
    touch /var/run/nginx.pid && \
    chown nginx:nginx /var/run/nginx.pid

# Expose port 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost/health || exit 1

# Start nginx in foreground
CMD ["nginx", "-g", "daemon off;"]

# Labels for container metadata
LABEL org.opencontainers.image.title="KinoWeek Frontend" \
      org.opencontainers.image.description="Astro static site for KinoWeek events" \
      org.opencontainers.image.source="https://github.com/BabakBar/KinoWeek" \
      org.opencontainers.image.licenses="MIT"
