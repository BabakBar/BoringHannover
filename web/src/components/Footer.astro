---
interface Props {
  updatedAt?: string;   // e.g., "Mon 18 Nov 09:00"
}

const { updatedAt } = Astro.props;
---

<footer class="mt-12 pt-6 border-t border-border text-center">
  {updatedAt && (
    <div class="font-display text-xs text-text-muted mb-2">
      Updated: {updatedAt}
    </div>
  )}

  <!-- Dot decoration -->
  <div class="flex justify-center gap-1 text-accent text-xs mb-4">
    <span>&#9642;</span>
    <span>&#9642;</span>
    <span>&#9642;</span>
  </div>

  <!-- Sources info -->
  <div class="font-display text-xs text-text-muted">
    <p>OV Movies &middot; Concerts &middot; Events</p>
    <p class="mt-1">Hannover, Germany</p>
  </div>

  <!-- Made with love + hosting location -->
  <div class="mt-4 font-display text-xs text-text-muted flex flex-wrap justify-center items-center gap-x-1.5 gap-y-0.5">
    <span>
      Made with ❤️ by <a href="https://github.com/BabakBar" class="text-accent hover:underline">Sia</a>
    </span>
    <span class="hidden sm:inline" aria-hidden="true">&middot;</span>
    <span>
      Hosted securely in
      <svg
        class="inline-block w-4 h-3 mx-0.5 align-baseline"
        viewBox="0 0 5 3"
        aria-label="Germany"
        role="img"
      >
        <rect width="5" height="1" y="0" fill="#000"/>
        <rect width="5" height="1" y="1" fill="#D00"/>
        <rect width="5" height="1" y="2" fill="#FFCE00"/>
      </svg>
    </span>
  </div>
</footer>
