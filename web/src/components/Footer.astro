---
interface Props {
  updatedAt?: string;   // e.g., "Mon 18 Nov 09:00"
}

const { updatedAt } = Astro.props;
---

<footer class="mt-12 pt-6 border-t border-border text-center">
  {updatedAt && (
    <div class="font-display text-xs text-text-muted mb-2">
      Updated: {updatedAt}
    </div>
  )}

  <!-- Dot decoration -->
  <div class="flex justify-center gap-1 text-accent text-xs mb-4">
    <span>&#9642;</span>
    <span>&#9642;</span>
    <span>&#9642;</span>
  </div>

  <!-- Sources info -->
  <div class="font-display text-xs text-text-muted">
    <p>OV Movies &middot; Concerts &middot; Events</p>
    <p class="mt-1">Hannover, Germany</p>
  </div>

  <!-- Legal links (required by German law) -->
  <nav class="mt-4 font-display text-xs text-text-muted" aria-label="Legal">
    <a href="/impressum" class="hover:text-text-secondary transition-colors">Impressum</a>
    <span class="mx-2">&middot;</span>
    <a href="/datenschutz" class="hover:text-text-secondary transition-colors">Datenschutz</a>
  </nav>

  <!-- Made with love -->
  <div class="mt-4 font-display text-xs text-text-muted">
    Made with ❤️ by <a href="https://github.com/BabakBar" class="text-accent hover:underline">Sia</a>
  </div>
</footer>
